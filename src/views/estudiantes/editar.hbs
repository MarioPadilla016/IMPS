<div class="container p-4">
    <div class="row justify-content-center">
        <h1>Editar estudiante</h1>
    </div>
    <div class="row justify-content-center mt-4">
        <div class="col-md-4">
            <form method="POST" action="/estudiantes/editar/{{idestudiante}}">
                <div class="form-group">
                    <input type="text" class="form-control" name="nombre" placeholder="Nombre del estudiante" value="{{nombre}}" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="apellido" placeholder="Apellido del estudiante" value="{{apellido}}" />
                </div>
                <div class="form-group">
                    <input type="email" class="form-control" name="email" placeholder="Correo del estudiante" value="{{email}}" />
                </div>
                <div class="form-group">
                    <select class="form-control" name="idcarrera">
                        <option value="1" {{#ifCond idcarrera '==' 1}}selected{{/ifCond}}>Carrera 1</option>
                        <option value="2" {{#ifCond idcarrera '==' 2}}selected{{/ifCond}}>Carrera 2</option>
                    </select>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="usuario" placeholder="Usuario del estudiante" value="{{usuario}}" />
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-block">Actualizar</button>
                </div>
            </form>
        </div>
    </div>
</div>
