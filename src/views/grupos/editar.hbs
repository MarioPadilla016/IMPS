<div class="container p-4">
    <div class="row justify-content-center">
        <h1>Editar grupo</h1>
    </div>
    <div class="row justify-content-center mt-4">
        <div class="col-md-4">
            <form method="POST" action="/grupos/editar/{{grupo.idgrupo}}">
                <div class="form-group">
                    <input type="text" class="form-control" name="idgrupo" value="{{grupo.idgrupo}}" placeholder="ID del grupo" readonly />
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="num_grupo" value="{{grupo.num_grupo}}" placeholder="Número de Grupo" />
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="anio" value="{{grupo.anio}}" placeholder="Año" />
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="ciclo" value="{{grupo.ciclo}}" placeholder="Ciclo" />
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="idmateria" value="{{grupo.idmateria}}" placeholder="ID Materia" />
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="idprofesor" value="{{grupo.idprofesor}}" placeholder="ID Profesor" />
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-block">Actualizar</button>
                </div>
            </form>
        </div>
    </div>
</div>