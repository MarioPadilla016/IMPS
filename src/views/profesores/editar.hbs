<div class="container p-4">
    <div class="row justify-content-center">
        <h1>Editar profesor</h1>
    </div>
    <div class="row justify-content-center mt-4">
        <div class="col-md-4">
            <form method="POST" action="/profesores/editar/{{profesor.idprofesor}}">
                <div class="form-group">
                    <input type="text" class="form-control" name="nombre" value="{{profesor.nombre}}" placeholder="Nombre del profesor" />
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="apellido" value="{{profesor.apellido}}" placeholder="Apellido del profesor" />
                </div>
                <div class="form-group">
                    <input type="date" class="form-control" name="fecha_nacimiento" value="{{profesor.fecha_nacimiento}}" placeholder="Fecha de Nacimiento" />
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="profesion" value="{{profesor.profesion}}" placeholder="ProfesiÃ³n" />
                </div>
                <div class="form-group">
                    <select class="form-control" name="genero">
                        <option value="M" {{#eq profesor.genero "M"}}selected{{/eq}}>Masculino</option>
                        <option value="F" {{#eq profesor.genero "F"}}selected{{/eq}}>Femenino</option>
                    </select>
                </div>
                <div class="form-group">
                    <input type="email" class="form-control" name="email" value="{{profesor.email}}" placeholder="Correo del profesor" />
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-block">Actualizar</button>
                </div>
            </form>
        </div>
    </div>
</div>